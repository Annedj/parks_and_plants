<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="cards">
        <% @garden.plants.each do |plant| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
            <%= plant.name %>
            <%= link_to '+', plant_path(plant), method: :delete, data: { confirm: 'Are you sure though?' }, class: 'card-delete-button' %>
          </div>
        <% end %>
      </div>
    </div>

    <div class='col-4'>
      <h3>Add a plant!</h3>
      <%# Post request to the url: /gardens/:garden_id/plants %>
      <%# <form action="/gardens/:garden_id/plants"></form> %>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name %>
        <%= f.input :image_url %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_garden_path(@garden) %> |
<%= link_to 'Back', gardens_path %>
